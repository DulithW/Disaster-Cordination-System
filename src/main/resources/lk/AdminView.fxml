<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="lk.disaster.controller.AdminViewController">
    <children>
        <GridPane style="-fx-background-color: #CDFFCD;">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            </rowConstraints>
            <children>
                <Label text="Province" GridPane.halignment="RIGHT">
                    <font>
                        <Font size="14.0" />
                    </font>
                    <GridPane.margin>
                        <Insets right="10.0" />
                    </GridPane.margin>
                </Label>
                <ComboBox fx:id="filterProvinceComboBox" prefWidth="200.0" GridPane.columnIndex="1" />
                <Label text="District" GridPane.columnIndex="2" GridPane.halignment="RIGHT">
                    <font>
                        <Font size="14.0" />
                    </font>
                    <GridPane.margin>
                        <Insets right="10.0" />
                    </GridPane.margin>
                </Label>
                <ComboBox fx:id="filterDistrictComboBox" prefWidth="200.0" GridPane.columnIndex="3" />
            </children>
            <padding>
                <Insets bottom="5.0" left="5.0" right="5.0" top="10.0" />
            </padding>
        </GridPane>
        <GridPane style="-fx-background-color: #E6FFE6;">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            </rowConstraints>
            <padding>
                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
            </padding>
            <children>
                <Label text="Disaster Type" GridPane.halignment="RIGHT">
                    <font>
                        <Font size="14.0" />
                    </font>
                    <GridPane.margin>
                        <Insets right="10.0" />
                    </GridPane.margin>
                </Label>
                <ComboBox fx:id="filterDisasterTypeComboBox" prefWidth="200.0" GridPane.columnIndex="1" />
            </children>
        </GridPane>
        <GridPane style="-fx-background-color: #E6FFE6;">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            </rowConstraints>
            <padding>
                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
            </padding>
            <children>
                <Label text="Urgency Level" GridPane.halignment="RIGHT">
                    <font>
                        <Font size="14.0" />
                    </font>
                    <GridPane.margin>
                        <Insets right="10.0" />
                    </GridPane.margin>
                </Label>
                <ComboBox fx:id="filterUrgencyLevelComboBox" prefWidth="200.0" GridPane.columnIndex="1" />
            </children>
        </GridPane>
        <GridPane style="-fx-background-color: #CDFFCD;">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            </rowConstraints>
            <padding>
                <Insets bottom="10.0" left="5.0" right="5.0" top="5.0" />
            </padding>
            <children>
                <Button mnemonicParsing="false" onAction="#handleFilterButton" prefWidth="100.0" text="Filter" GridPane.columnIndex="2" GridPane.halignment="RIGHT" />
                <Button mnemonicParsing="false" onAction="#handleClearFilterButton" opacity="0.81" prefWidth="100.0" text="Clear Filter" GridPane.columnIndex="1" GridPane.halignment="RIGHT" />
            </children>
        </GridPane>
        <TableView fx:id="disasterReportsTable" prefHeight="700.0" prefWidth="1180.0" style="-fx-background-color: #E6FFE6;">
            <columns>
                <TableColumn fx:id="requestIdColumn" prefWidth="75.0" text="Request ID" />
                <TableColumn fx:id="reporterNameColumn" prefWidth="120.0" text="Reporter Name" />
                <TableColumn fx:id="contactInfoColumn" prefWidth="120.0" text="Contact Info" />
                <TableColumn fx:id="locationColumn" prefWidth="200.0" text="Location" />
                <TableColumn fx:id="disasterInfoColumn" prefWidth="200.0" text="Disaster Info" />
                <TableColumn fx:id="impactSummaryColumn" prefWidth="200.0" text="Impact Summary" />
                <TableColumn fx:id="affectedIndividualsColumn" prefWidth="100.0" text="Affected Individuals" />
                <TableColumn fx:id="statusColumn" prefWidth="100.0" text="Status" />
            </columns>
        </TableView>
    </children>
</VBox>
